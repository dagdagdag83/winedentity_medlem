<!doctype html>
<html lang="nb" class="bg-brand-purple-light/10">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}{% endblock %}</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            brand: {
              purple: {
                DEFAULT: '#62246d',
                light: '#8c3b9b', // Lighter variation
                dark: '#3b1641', // Darker variation
                verydark: '#1e0b21', // Very dark for backgrounds
              },
              gold: {
                DEFAULT: '#ecc247',
                light: '#f7e3a6', // Lighter variation
                dark: '#a68524', // Darker variation
              }
            }
          }
        }
      }
    }
  </script>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.5.0/css/flag-icon.min.css">
  <link href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
</head>

<body
  class="max-w-4xl bg-white shadow-xl rounded-lg flex flex-col min-h-screen m-6 font-['Inter'] text-slate-900 border border-gray-100">
  <header>
    <div class="h-40 bg-cover bg-center border-b-4 border-brand-gold shadow-md rounded-t-lg"
      style="background-image: url('{{ url_for('static', filename='header_2_smaller.jpg') }}');"></div>

    {% block navbar %}
    <nav class="bg-brand-purple-dark/95 backdrop-blur-md border-b-2 border-brand-gold sticky top-0 z-50 shadow-lg">
      <div class="max-w-4xl mx-auto px-4 md:px-6">
        <div class="flex items-center justify-between h-16">
          <!-- Logo/Home Link -->
          <a href="/"
            class="font-bold text-brand-gold text-lg md:text-xl tracking-wider hover:text-white transition-colors font-['Cinzel'] flex items-center gap-2">
            <span>⚜️</span> Winedentity
          </a>

          <!-- Navigation Links -->
          <ul class="hidden md:flex space-x-6 text-sm font-medium text-brand-gold-light">
            <li><a href="/#about"
                class="hover:text-brand-gold transition-colors relative group font-['Cinzel'] tracking-wide">
                Om oss
                <span
                  class="absolute -bottom-1 left-0 w-0 h-0.5 bg-brand-gold transition-all group-hover:w-full"></span>
              </a></li>
            <li><a href="/#membership"
                class="hover:text-brand-gold transition-colors relative group font-['Cinzel'] tracking-wide">
                Medlemskap
                <span
                  class="absolute -bottom-1 left-0 w-0 h-0.5 bg-brand-gold transition-all group-hover:w-full"></span>
              </a></li>
          </ul>

          <!-- CTA Button -->
          <a href="{% if env == 'local' %}/reg{% else %}http://reg.winedentity.org{% endif %}"
            class="inline-flex px-4 md:px-6 py-2 bg-gradient-to-b from-brand-gold to-brand-gold-dark text-brand-purple-dark rounded-sm text-xs font-bold hover:shadow-[0_0_15px_rgba(236,194,71,0.6)] transition-all font-['Cinzel'] tracking-wider border border-brand-gold-light hover:scale-105">
            Bli medlem
          </a>
        </div>
      </div>
    </nav>
    {% endblock %}
  </header>

  <main class="flex-grow px-6 pb-6 pt-10">
    {% block content %}{% endblock %}
  </main>

  {% block footer %}
  <!-- Footer -->
  <footer
    class="mt-12 bg-brand-purple-dark border-t-4 border-brand-gold text-brand-gold-light py-4 shadow-lg relative overflow-hidden rounded-b-lg">
    <!-- Background Texture -->
    <div
      class="absolute inset-0 opacity-5 bg-[url('https://www.transparenttextures.com/patterns/black-linen.png')] pointer-events-none">
    </div>

    <div class="relative z-10 flex flex-col md:flex-row justify-between items-center gap-4 px-6 md:px-12">

      <!-- Org Details -->
      <div class="text-center md:text-left">
        <p class="font-['Cinzel'] font-bold text-base text-brand-gold mb-1">Foreningen Winedentity</p>
        <p class="text-xs opacity-80">
          Org.nr: 935 821 894 <span class="mx-2 text-brand-gold">|</span>
          <a href="https://virksomhet.brreg.no/nb/oppslag/enheter/935821894" target="_blank"
            class="hover:text-brand-gold underline decoration-brand-gold/50 hover:decoration-brand-gold transition-all">
            Registrert i Frivillighetsregisteret
          </a>
        </p>
      </div>

      <!-- Scroll Top Button -->
      <button onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
        class="group flex flex-col items-center justify-center w-10 h-10 rounded-full border-2 border-brand-gold text-brand-gold hover:bg-brand-gold hover:text-brand-purple-dark transition-all duration-300 shadow-md"
        title="Til toppen">
        <!-- Arrow Icon (Default) -->
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 block group-hover:hidden transition-all" fill="none"
          viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
        </svg>
        <!-- Fleur Icon (Hover) -->
        <span class="hidden group-hover:block text-xl transition-all">⚜️</span>
      </button>
    </div>

    <div class="mt-2 text-center text-[10px] opacity-40 font-serif italic">
      All rights reserved in vino veritas.
    </div>
  </footer>
  {% endblock %}
  <script src="https://www.google.com/recaptcha/api.js"></script>

  {% block scripts %}
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script src="https://cdn.jsdelivr.net/npm/tom-select/dist/js/tom-select.complete.min.js"></script>
  {% endblock %}
</body>

</html>